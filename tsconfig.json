{
	"compilerOptions": {
		"composite": true,
		// Other type checking options
		"allowJs": true,
		"checkJs": true,
		// "declaration": true,
		// "declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": false,
		"target": "ES2018"
	},
	"include": [
		"lib/**/*.js"
	],
	"exclude": [
		"node_modules/**"
	]
}
